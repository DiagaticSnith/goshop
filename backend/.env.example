# Copy this file to `.env` and fill values before running.

# Database (used by Prisma)
DATABASE_URL=mysql://goshop:goshop@localhost:3306/goshop

# App
PORT=3000
NODE_ENV=development

# Frontend URL (used to build success/cancel urls)
FRONTEND_URL=http://localhost:5173

# Cloudinary (image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Stripe
STRIPE_SECRET_KEY=sk_test_...
ENDPOINT_SECRET=whsec_...  # webhook signing secret

# Firebase storage bucket (optional if using Firebase storage)
FIREBASE_BUCKET_URL=your-bucket.appspot.com

# Note: The Firebase service account JSON is expected at src/config/serviceAccountKey.json
