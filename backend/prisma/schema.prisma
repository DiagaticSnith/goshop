generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
}

model User {
  firebaseId String  @unique
  email      String  @unique @db.VarChar(255)
  fullName   String
  role       Role    @default(USER)
  status     UserStatus @default(ACTIVE)
  avatar     String?
  Order      Order[]
  // A user can have one cart (optional)
  cart       Cart?
}

enum Role {
  USER
  ADMIN
}

enum UserStatus {
  ACTIVE
  HIDDEN
}

model Product {
  id            String    @unique
  name          String
  description   String    @db.Text
  price         Float
  stockQuantity Int
  weight        Float?
  width         Float?
  height        Float?
  brand         String?
  material      String?
  image         String
  status        ProductStatus @default(ACTIVE)
  category      Category? @relation(fields: [categoryId], references: [id], onUpdate: Cascade)
  categoryId    Int?
  priceId       String    @unique
  createdAt     DateTime  @default(now())

  // Relations
  cartItems     CartItem[]
  orderDetails  OrderDetails[]

  @@fulltext([name])
  @@fulltext([name, description])
}

enum ProductStatus {
  ACTIVE
  HIDDEN
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  createdAt DateTime  @default(now())
  products  Product[]
}

model Order {
  id        Int      @id @default(autoincrement())
  amount    Float
  userId    String
  user      User     @relation(fields: [userId], references: [firebaseId])
  items     Json
  country   String
  address   String
  sessionId String   @unique
  createdAt DateTime @default(now())
  // opposite relation for OrderDetails
  details   OrderDetails[]
}

model Cart {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  // Relation: a cart belongs to a user and has many cart items
  userId    String?    @unique
  user      User?      @relation(fields: [userId], references: [firebaseId])
  items     CartItem[]
}

model CartItem {
  id            Int     @id @default(autoincrement())
  totalQuantity Int
  // relation to cart
  cartId        Int
  cart          Cart    @relation(fields: [cartId], references: [id], onDelete: Cascade)
  // relation to product
  productId     String
  product       Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model OrderDetails {
  id            Int     @id @default(autoincrement())
  totalQuantity Int
  totalPrice    Float
  // link back to order
  orderId       Int
  order         Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  // link to product
  productId     String
  product       Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}
